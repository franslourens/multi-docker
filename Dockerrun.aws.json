{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
	"name": "client",
	"image": "franslourens/multi-client",
	"hostname": "client",
	"essential": false
    },
    {
	"name": "server",
	"image": "franslourens/multi-server",
	"hostname": "api",
	"essential": false
    },
    {
	"name": "worker",
	"image": "franslourens/multi-worker",
	"hostname": "worker",
	"essential": false
    },
    {
	"name": "nginx",
	"image": "franslourens/multi-nginx",
	"hostname": "nginx",
	"essential": true,
	"portMappings": [
	 {
		"hostPort": 80,
		"containerPort": 80
	 }
	],
	"links": ["client", "server"]
    }
  ]
}
